# ============================================================================
# ENVIRONMENT VARIABLES EXAMPLE
# ============================================================================
# Copia este archivo a .env y actualiza los valores según tu configuración
# NUNCA subas el archivo .env real al repositorio
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=BD_org
DB_USER=postgres
DB_PASSWORD=tu_contraseña_segura

# Cadena de conexión completa (alternativa)
# ConnectionStrings__DefaultConnection=Host=localhost;Port=5432;Database=BD_org;Username=postgres;Password=tu_contraseña_segura

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:5001;http://localhost:5000

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Cookie expiration time in minutes
COOKIE_EXPIRATION_MINUTES=30

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=Information

