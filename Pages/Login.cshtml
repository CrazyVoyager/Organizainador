@page
@model Organizainador.Pages.LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<div class="container mt-5" style="max-width:420px;">
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <h3 class="card-title text-center mb-3">Iniciar sesión</h3>

            <form method="post" novalidate>
                <div asp-validation-summary="All" class="text-danger mb-2"></div>

                <div class="mb-3">
                    <label asp-for="Usuario" class="form-label"></label>
                    <input asp-for="Usuario" class="form-control" />
                    <span asp-validation-for="Usuario" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Contrasena" class="form-label"></label>
                    <input asp-for="Contrasena" type="password" class="form-control" />
                    <span asp-validation-for="Contrasena" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Ingresar</button>

                @if (!string.IsNullOrEmpty(Model.MensajeError))
                {
                    <div class="alert alert-danger mt-3" role="alert">@Model.MensajeError</div>
                }
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
