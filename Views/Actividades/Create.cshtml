@model Organizainador.Models.ActividadModel
@{
    ViewData["Title"] = "Crear Actividad";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index" class="text-decoration-none">
                            <i class="fas fa-tasks me-1"></i>Actividades
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Nueva Actividad</li>
                </ol>
            </nav>

            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 text-primary">
                        <i class="fas fa-plus-circle me-2"></i>Crear Nueva Actividad
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Información de la Actividad -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-muted mb-3 pb-2 border-bottom">
                                    <i class="fas fa-info-circle me-2"></i>Información de la Actividad
                                </h6>
                            </div>
                            
                            <div class="col-12 mb-3">
                                <label asp-for="Nombre" class="form-label fw-bold">
                                    Nombre de la Actividad <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Nombre" 
                                       class="form-control" 
                                       placeholder="Ej: Proyecto Final, Examen de Matemáticas..."
                                       autofocus>
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mb-3">
                                <label asp-for="Descripcion" class="form-label fw-bold">
                                    Descripción
                                </label>
                                <textarea asp-for="Descripcion" 
                                          class="form-control" 
                                          rows="4"
                                          placeholder="Describe los detalles de la actividad..."></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                                <small class="text-muted">Opcional: Añade detalles adicionales sobre la actividad</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Etiqueta" class="form-label fw-bold">
                                    Etiqueta/Categoría
                                </label>
                                <select asp-for="Etiqueta" class="form-select">
                                    <option value="">-- Sin etiqueta --</option>
                                    <option value="Trabajo">🏢 Trabajo</option>
                                    <option value="Estudio">📚 Estudio</option>
                                    <option value="Personal">👤 Personal</option>
                                    <option value="Proyecto">💼 Proyecto</option>
                                    <option value="Examen">📝 Examen</option>
                                    <option value="Tarea">✅ Tarea</option>
                                    <option value="Reunión">🤝 Reunión</option>
                                    <option value="Otro">📌 Otro</option>
                                </select>
                                <span asp-validation-for="Etiqueta" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Nota informativa -->
                        <div class="alert alert-info d-flex align-items-center" role="alert">
                            <i class="fas fa-info-circle me-2 fa-lg"></i>
                            <div>
                                <strong>Nota:</strong> Después de crear la actividad, podrás asignarle horarios específicos desde la sección de Horarios.
                            </div>
                        </div>

                        <!-- Botones de acción -->
                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-save me-1"></i> Crear Actividad
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}