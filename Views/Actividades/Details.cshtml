@model Organizainador.Models.ActividadModel

@{
    ViewData["Title"] = "Detalles de la Actividad";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-eye me-1"></i> Detalles de la Actividad
                    </h6>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Etiqueta)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Etiqueta)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.UsuarioId)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.UsuarioId)
                        </dd>

                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.CreatedAt)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.CreatedAt)
                        </dd>

                        <dt class="col-sm-3">
                            Horarios
                        </dt>
                        <dd class="col-sm-9">
                            @if (Model?.Horarios != null && Model.Horarios.Any())
                            {
                                <ul class="list-unstyled">
                                    @foreach (var horario in Model.Horarios)
                                    {
                                        <li class="mb-2">
                                            <span class="badge bg-primary">
                                                @horario.DiaSemana: @horario.HoraInicio.ToString(@"hh\:mm") - @horario.HoraFin.ToString(@"hh\:mm")
                                            </span>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">No hay horarios asignados</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i> Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>