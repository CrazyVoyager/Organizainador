@model Organizainador.Models.ActividadModel

@{
    ViewData["Title"] = "Modificar Actividad";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-warning">
                        <i class="fas fa-edit me-1"></i> Modificar Actividad
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre de la Actividad</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" required>
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" placeholder="Ingrese una descripción"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Etiqueta" class="form-label">Etiqueta</label>
                            <input asp-for="Etiqueta" class="form-control" placeholder="Ej: Trabajo, Estudio, Personal">
                            <span asp-validation-for="Etiqueta" class="text-danger small"></span>
                        </div>

                        <!-- Sección de Horarios -->
                        <div class="mb-4">
                            <h5 class="mb-3">Horarios</h5>
                            <div id="horarios-container">
                                @if (Model.Horarios != null && Model.Horarios.Any())
                                {
                                    int index = 0;
                                    foreach (var horario in Model.Horarios)
                                    {
                                        <div class="horario-item card mb-3 p-3" data-horario-id="@horario.Id">
                                            <input type="hidden" name="Horarios[@index].Id" value="@horario.Id" />
                                            <div class="row">
                                                <div class="col-md-4 mb-2">
                                                    <label class="form-label">Día de la Semana</label>
                                                    <select name="Horarios[@index].DiaSemana" class="form-select">
                                                        <option value="">Selecciona el Día</option>
                                                        <option value="Lunes" selected="@(horario.DiaSemana == "Lunes")">Lunes</option>
                                                        <option value="Martes" selected="@(horario.DiaSemana == "Martes")">Martes</option>
                                                        <option value="Miércoles" selected="@(horario.DiaSemana == "Miércoles")">Miércoles</option>
                                                        <option value="Jueves" selected="@(horario.DiaSemana == "Jueves")">Jueves</option>
                                                        <option value="Viernes" selected="@(horario.DiaSemana == "Viernes")">Viernes</option>
                                                        <option value="Sábado" selected="@(horario.DiaSemana == "Sábado")">Sábado</option>
                                                        <option value="Domingo" selected="@(horario.DiaSemana == "Domingo")">Domingo</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-3 mb-2">
                                                    <label class="form-label">Hora de Inicio</label>
                                                    <input type="time" name="Horarios[@index].HoraInicio" value="@horario.HoraInicio.ToString(@"hh\:mm")" class="form-control">
                                                </div>
                                                <div class="col-md-3 mb-2">
                                                    <label class="form-label">Hora de Fin</label>
                                                    <input type="time" name="Horarios[@index].HoraFin" value="@horario.HoraFin.ToString(@"hh\:mm")" class="form-control">
                                                </div>
                                                <div class="col-md-2 mb-2 d-flex align-items-end">
                                                    <button type="button" class="btn btn-danger btn-sm remove-horario">
                                                        <i class="fas fa-trash"></i> Eliminar
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        index++;
                                    }
                                }
                                else
                                {
                                    <div class="horario-item card mb-3 p-3">
                                        <div class="row">
                                            <div class="col-md-4 mb-2">
                                                <label class="form-label">Día de la Semana</label>
                                                <select name="Horarios[0].DiaSemana" class="form-select">
                                                    <option value="">Selecciona el Día</option>
                                                    <option value="Lunes">Lunes</option>
                                                    <option value="Martes">Martes</option>
                                                    <option value="Miércoles">Miércoles</option>
                                                    <option value="Jueves">Jueves</option>
                                                    <option value="Viernes">Viernes</option>
                                                    <option value="Sábado">Sábado</option>
                                                    <option value="Domingo">Domingo</option>
                                                </select>
                                            </div>
                                            <div class="col-md-3 mb-2">
                                                <label class="form-label">Hora de Inicio</label>
                                                <input type="time" name="Horarios[0].HoraInicio" class="form-control">
                                            </div>
                                            <div class="col-md-3 mb-2">
                                                <label class="form-label">Hora de Fin</label>
                                                <input type="time" name="Horarios[0].HoraFin" class="form-control">
                                            </div>
                                            <div class="col-md-2 mb-2 d-flex align-items-end">
                                                <button type="button" class="btn btn-danger btn-sm remove-horario" disabled>
                                                    <i class="fas fa-trash"></i> Eliminar
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <button type="button" id="add-horario" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> Agregar Horario
                            </button>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i> Actualizar Actividad
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        let horarioIndex = @(Model.Horarios?.Count ?? 1);

        document.getElementById('add-horario').addEventListener('click', function() {
            const container = document.getElementById('horarios-container');
            const newHorario = document.createElement('div');
            newHorario.className = 'horario-item card mb-3 p-3';
            newHorario.innerHTML = `
                <div class="row">
                    <div class="col-md-4 mb-2">
                        <label class="form-label">Día de la Semana</label>
                        <select name="Horarios[${horarioIndex}].DiaSemana" class="form-select">
                            <option value="">Selecciona el Día</option>
                            <option value="Lunes">Lunes</option>
                            <option value="Martes">Martes</option>
                            <option value="Miércoles">Miércoles</option>
                            <option value="Jueves">Jueves</option>
                            <option value="Viernes">Viernes</option>
                            <option value="Sábado">Sábado</option>
                            <option value="Domingo">Domingo</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-2">
                        <label class="form-label">Hora de Inicio</label>
                        <input type="time" name="Horarios[${horarioIndex}].HoraInicio" class="form-control">
                    </div>
                    <div class="col-md-3 mb-2">
                        <label class="form-label">Hora de Fin</label>
                        <input type="time" name="Horarios[${horarioIndex}].HoraFin" class="form-control">
                    </div>
                    <div class="col-md-2 mb-2 d-flex align-items-end">
                        <button type="button" class="btn btn-danger btn-sm remove-horario">
                            <i class="fas fa-trash"></i> Eliminar
                        </button>
                    </div>
                </div>
            `;
            container.appendChild(newHorario);
            horarioIndex++;
            updateRemoveButtons();
        });

        document.addEventListener('click', function(e) {
            if (e.target && e.target.classList.contains('remove-horario')) {
                e.target.closest('.horario-item').remove();
                updateRemoveButtons();
            }
        });

        function updateRemoveButtons() {
            const horarios = document.querySelectorAll('.horario-item');
            horarios.forEach((horario, index) => {
                const removeBtn = horario.querySelector('.remove-horario');
                if (removeBtn) {
                    removeBtn.disabled = horarios.length === 1;
                }
            });
        }

        // Initialize on load
        updateRemoveButtons();
    </script>
}