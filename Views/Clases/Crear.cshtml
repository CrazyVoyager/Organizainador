@model Organizainador.Models.ClaseModel
@{
    ViewData["Title"] = "Crear Clase";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-book me-1"></i> Crear Nueva Clase
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="Crear" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="UsuarioId" class="form-label">Usuario</label>
                            <select asp-for="UsuarioId" class="form-control" required>
                                <option value="">Seleccionar Usuario</option>
                                @if (ViewBag.Usuarios != null)
                                {
                                    @foreach (var usuario in ViewBag.Usuarios)
                                    {
                                        <option value="@usuario.Id">@usuario.Nombre - @usuario.Email</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="UsuarioId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre de la Clase</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la clase" required>
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" placeholder="Ingrese una descripción"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CantidadHorasDia" class="form-label">Horas por Día</label>
                            <input asp-for="CantidadHorasDia" type="number" class="form-control" placeholder="Ej: 2" min="1" max="24" required>
                            <span asp-validation-for="CantidadHorasDia" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Guardar Clase
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        // Debug script
        console.log("Vista de Crear Clase cargada correctamente");
        
        document.querySelector('form').addEventListener('submit', function(e) {
            console.log('Formulario enviado');
            console.log('UsuarioId:', document.getElementById('UsuarioId').value);
            console.log('Nombre:', document.getElementById('Nombre').value);
            console.log('CantidadHorasDia:', document.getElementById('CantidadHorasDia').value);
        });
    </script>
}