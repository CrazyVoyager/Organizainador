@model Organizainador.Models.ClaseModel
@{
    ViewData["Title"] = "Detalle de Clase";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index" class="text-decoration-none">
                            <i class="fas fa-book me-1"></i>Clases
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Nombre</li>
                </ol>
            </nav>

            <!-- Información de la Clase -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-primary">
                            <i class="fas fa-graduation-cap me-2"></i>Información de la Clase
                        </h5>
                        <div class="btn-group">
                            <a asp-action="Modificar" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit me-1"></i> Editar
                            </a>
                            <a asp-action="Eliminar" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash me-1"></i> Eliminar
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label text-muted small fw-bold">NOMBRE</label>
                            <p class="mb-0 fs-5">@Model.Nombre</p>
                        </div>
                        <div class="col-12 mb-3">
                            <label class="form-label text-muted small fw-bold">DESCRIPCIÓN</label>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.Descripcion))
                                {
                                    @Model.Descripcion
                                }
                                else
                                {
                                    <span class="text-muted">Sin descripción</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Horarios Asociados -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 text-primary">
                        <i class="fas fa-clock me-2"></i>Horarios Asociados
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewData["Horarios"] is List<Organizainador.Models.HorarioModel> horarios && horarios.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Día/Fecha</th>
                                        <th>Hora Inicio</th>
                                        <th>Hora Fin</th>
                                        <th>Duración</th>
                                        <th>Tipo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var horario in horarios)
                                    {
                                        <tr>
                                            <td>
                                                @if (horario.EsRecurrente)
                                                {
                                                    <i class="fas fa-sync-alt text-info me-1"></i>
                                                    @horario.DiaSemana
                                                }
                                                else
                                                {
                                                    <i class="fas fa-calendar-day text-warning me-1"></i>
                                                    @horario.FechaEspecifica?.ToString("dd/MM/yyyy")
                                                }
                                            </td>
                                            <td>@horario.HoraInicio.ToString(@"hh\:mm")</td>
                                            <td>@horario.HoraFin.ToString(@"hh\:mm")</td>
                                            <td>
                                                @{
                                                    var duracion = horario.HoraFin - horario.HoraInicio;
                                                }
                                                <span class="badge bg-secondary">@duracion.TotalHours.ToString("F1") h</span>
                                            </td>
                                            <td>
                                                @if (horario.EsRecurrente)
                                                {
                                                    <span class="badge bg-info">Recurrente</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Único</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="far fa-calendar-times fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-3">No hay horarios asociados a esta clase.</p>
                            <a href="/Horarios/Create" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus me-1"></i> Agregar Horario
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Botón volver -->
            <div class="text-center mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                </a>
            </div>
        </div>
    </div>
</div>