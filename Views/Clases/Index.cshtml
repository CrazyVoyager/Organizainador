@model List<Organizainador.Models.ClaseModel>
@{
    ViewData["Title"] = "Gestión de Clases";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-book me-2"></i>Clases</h1>
        <a asp-action="Crear" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Nueva Clase
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lista de Clases</h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Horas/Día</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var clase in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@clase.Nombre</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(clase.Descripcion))
                                        {
                                            @clase.Descripcion
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Sin descripción</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@clase.CantidadHorasDia h/día</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Modificar" asp-route-id="@clase.Id"
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <a asp-action="Eliminar" asp-route-id="@clase.Id"
                                               class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Eliminar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-book fa-3x text-gray-300 mb-3"></i>
                    <h5 class="text-gray-500">No hay clases registradas</h5>
                    <p class="text-gray-500">Comienza agregando una nueva clase.</p>
                    <a asp-action="Crear" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Crear Primera Clase
                    </a>
                </div>
            }
        </div>
    </div>
</div>