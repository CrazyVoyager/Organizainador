@model List<Organizainador.Models.ClaseModel>
@{
    ViewData["Title"] = "Gestión de Clases";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1 class="h3 mb-1 text-gray-800">
                        <i class="fas fa-book me-2"></i>Clases
                    </h1>
                    <p class="text-muted mb-0 small">Gestiona tus asignaturas y materias</p>
                </div>
                <a asp-action="Crear" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Nueva Clase
                </a>
            </div>
        </div>
    </div>

    <!-- Barra de búsqueda -->
    <div class="card shadow-sm mb-4">
        <div class="card-body py-3">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-9">
                    <label class="form-label small fw-bold mb-1">Buscar</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" 
                               name="busqueda" 
                               class="form-control" 
                               placeholder="Buscar por nombre o descripción..."
                               value="@ViewData["BusquedaActual"]">
                    </div>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Lista de clases -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var clase in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100 hover-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-graduation-cap text-primary me-2"></i>
                                    @clase.Nombre
                                </h5>
                            </div>

                            @if (!string.IsNullOrEmpty(clase.Descripcion))
                            {
                                <p class="card-text text-muted small mb-3">
                                    @(clase.Descripcion.Length > 100 
                                        ? clase.Descripcion.Substring(0, 100) + "..." 
                                        : clase.Descripcion)
                                </p>
                            }
                            else
                            {
                                <p class="card-text text-muted small mb-3 fst-italic">Sin descripción</p>
                            }
                        </div>
                        <div class="card-footer bg-white border-top">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Detalle" asp-route-id="@clase.Id" 
                                   class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye"></i> Ver
                                </a>
                                <a asp-action="Modificar" asp-route-id="@clase.Id" 
                                   class="btn btn-sm btn-outline-warning">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Eliminar" asp-route-id="@clase.Id" 
                                   class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <div class="mb-3">
                            <i class="fas fa-book fa-4x text-muted opacity-50"></i>
                        </div>
                        <h5 class="text-muted mb-2">No hay clases registradas</h5>
                        <p class="text-muted small mb-4">
                            @if (ViewData["BusquedaActual"] != null)
                            {
                                <text>No se encontraron resultados para tu búsqueda.</text>
                            }
                            else
                            {
                                <text>Comienza agregando tu primera clase.</text>
                            }
                        </p>
                        @if (ViewData["BusquedaActual"] != null)
                        {
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-times me-1"></i> Limpiar búsqueda
                            </a>
                        }
                        <a asp-action="Crear" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i> Crear Primera Clase
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }

    .card-title {
        font-size: 1.1rem;
        font-weight: 600;
    }
</style>