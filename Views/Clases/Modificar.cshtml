@model Organizainador.Models.ClaseModel
@{
    ViewData["Title"] = "Modificar Clase";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index" class="text-decoration-none">
                            <i class="fas fa-book me-1"></i>Clases
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Editar: @Model.Nombre</li>
                </ol>
            </nav>

            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 text-warning">
                        <i class="fas fa-edit me-2"></i>Modificar Clase
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Modificar" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Información de la Clase -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-muted mb-3 pb-2 border-bottom">
                                    <i class="fas fa-info-circle me-2"></i>Información de la Clase
                                </h6>
                            </div>
                            
                            <div class="col-12 mb-3">
                                <label asp-for="Nombre" class="form-label fw-bold">
                                    Nombre de la Clase <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Nombre" 
                                       class="form-control" 
                                       placeholder="Ej: Matemáticas, Historia, Programación..."
                                       required>
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mb-3">
                                <label asp-for="Descripcion" class="form-label fw-bold">
                                    Descripción
                                    <span class="text-muted small">(Opcional)</span>
                                </label>
                                <textarea asp-for="Descripcion" 
                                          class="form-control" 
                                          rows="4"
                                          placeholder="Describe los detalles de la clase..."></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Botones de acción -->
                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning px-4">
                                <i class="fas fa-save me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}