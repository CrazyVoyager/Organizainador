@model Organizainador.Models.HorarioModel

@{
    ViewData["Title"] = "Crear Horario";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-plus me-1"></i> Registrar Nuevo Horario
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label class="form-label">Tipo de Asignación</label>
                            <select id="tipoAsignacion" class="form-select" onchange="toggleAsignacion()">
                                <option value="">-- Selecciona el tipo --</option>
                                <option value="clase">Clase</option>
                                <option value="actividad">Actividad</option>
                            </select>
                        </div>

                        <div class="mb-3" id="claseGroup" style="display:none;">
                            <label asp-for="ClaseId" class="form-label">Clase Asignada</label>
                            <select asp-for="ClaseId" class="form-control" asp-items="@(ViewData["ClaseId"] as SelectList)">
                                <option value="">Selecciona una Clase</option>
                            </select>
                            <span asp-validation-for="ClaseId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3" id="actividadGroup" style="display:none;">
                            <label asp-for="ActividadId" class="form-label">Actividad Asignada</label>
                            <select asp-for="ActividadId" class="form-control" asp-items="@(ViewData["ActividadId"] as SelectList)">
                                <option value="">Selecciona una Actividad</option>
                            </select>
                            <span asp-validation-for="ActividadId" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="EsRecurrente" class="form-label">Tipo de Evento</label>
                                <select asp-for="EsRecurrente" id="esRecurrente" class="form-select" onchange="toggleFechaSelector()" required>
                                    <option value="true">Recurrente (se repite todas las semanas)</option>
                                    <option value="false">Único (solo una vez)</option>
                                </select>
                                <span asp-validation-for="EsRecurrente" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3" id="diaSemanaGroup">
                                <label asp-for="DiaSemana" class="form-label">Día de la Semana</label>
                                <select asp-for="DiaSemana" class="form-select" required>
                                    <option value="">Selecciona el Día</option>
                                    <option value="Lunes">Lunes</option>
                                    <option value="Martes">Martes</option>
                                    <option value="Miércoles">Miércoles</option>
                                    <option value="Jueves">Jueves</option>
                                    <option value="Viernes">Viernes</option>
                                    <option value="Sábado">Sábado</option>
                                    <option value="Domingo">Domingo</option>
                                </select>
                                <span asp-validation-for="DiaSemana" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3" id="fechaEspecificaGroup" style="display:none;">
                                <label asp-for="FechaEspecifica" class="form-label">Fecha Específica</label>
                                <input asp-for="FechaEspecifica" type="date" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")">
                                <span asp-validation-for="FechaEspecifica" class="text-danger small"></span>
                                <small class="text-muted">Selecciona la fecha exacta del evento</small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="HoraInicio" class="form-label">Hora de Inicio</label>
                                <input asp-for="HoraInicio" type="time" class="form-control" required>
                                <span asp-validation-for="HoraInicio" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="HoraFin" class="form-label">Hora de Fin</label>
                                <input asp-for="HoraFin" type="time" class="form-control" required>
                                <span asp-validation-for="HoraFin" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Guardar Horario
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function toggleAsignacion() {
            var tipo = document.getElementById('tipoAsignacion').value;
            var claseGroup = document.getElementById('claseGroup');
            var actividadGroup = document.getElementById('actividadGroup');
            var claseSelect = document.getElementById('ClaseId');
            var actividadSelect = document.getElementById('ActividadId');

            if (tipo === 'clase') {
                claseGroup.style.display = 'block';
                actividadGroup.style.display = 'none';
                actividadSelect.value = '';
            } else if (tipo === 'actividad') {
                claseGroup.style.display = 'none';
                actividadGroup.style.display = 'block';
                claseSelect.value = '';
            } else {
                claseGroup.style.display = 'none';
                actividadGroup.style.display = 'none';
                claseSelect.value = '';
                actividadSelect.value = '';
            }
        }

        function toggleFechaSelector() {
            var esRecurrente = document.getElementById('esRecurrente').value === 'true';
            var diaSemanaGroup = document.getElementById('diaSemanaGroup');
            var fechaEspecificaGroup = document.getElementById('fechaEspecificaGroup');
            var diaSemanaSelect = document.querySelector('#DiaSemana');
            var fechaInput = document.querySelector('#FechaEspecifica');

            if (esRecurrente) {
                // Mostrar selector de día de la semana
                diaSemanaGroup.style.display = 'block';
                fechaEspecificaGroup.style.display = 'none';
                diaSemanaSelect.required = true;
                fechaInput.required = false;
                fechaInput.value = '';
            } else {
                // Mostrar selector de fecha específica
                diaSemanaGroup.style.display = 'none';
                fechaEspecificaGroup.style.display = 'block';
                diaSemanaSelect.required = false;
                fechaInput.required = true;
                diaSemanaSelect.value = '';
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            toggleAsignacion();
            toggleFechaSelector();
        });
    </script>
}