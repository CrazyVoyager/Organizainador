@model Organizainador.Models.PruebaModel
@{
    ViewData["Title"] = "Prueba";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Prueba - Vista de ejemplo</title>
    <style>
        body { font-family: Segoe UI, Roboto, Arial, sans-serif; margin: 2rem; color: #222; background: #f7f7f7; }
        header { margin-bottom: 1.5rem; }
        .card { background: #fff; padding: 1rem; border-radius: 6px; box-shadow: 0 1px 4px rgba(0,0,0,.08); }
        table { width: 100%; border-collapse: collapse; margin-top: .5rem; }
        th, td { text-align: left; padding: .5rem; border-bottom: 1px solid #eee; }
        .controls { margin-top: 1rem; display: flex; gap: .5rem; flex-wrap: wrap; }
        button { padding: .5rem .75rem; border: 0; border-radius: 4px; cursor: pointer; }
        .primary { background: #0078d4; color: #fff; }
        .muted { background: #e1e1e1; }
        footer { margin-top: 1.5rem; font-size: .9rem; color: #666; }
    </style>
</head>
<body>
    <header>
        <h1>Vista de Prueba</h1>
        <p class="muted">Archivo: /View/Prueba.cshtml — Fecha: @DateTime.Now.ToString("G")</p>
    </header>

    <main class="card">
        <section>
            <h2>Formulario de ejemplo</h2>
            <form id="sampleForm" onsubmit="event.preventDefault(); showResult();">
                <label for="nombre">Nombre:</label><br />
                <input id="nombre" name="nombre" type="text" placeholder="Ingresa tu nombre" style="padding:.4rem; width:100%; margin:.3rem 0; border-radius:4px; border:1px solid #ccc;" />

                <label for="categoria">Categoría:</label><br />
                <select id="categoria" name="categoria" style="padding:.4rem; width:100%; margin:.3rem 0; border-radius:4px; border:1px solid #ccc;">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                </select>

                <div class="controls">
                    <button type="submit" class="primary">Enviar</button>
                    <button type="button" class="muted" onclick="resetForm()">Limpiar</button>
                    <button type="button" onclick="toggleTheme()">Alternar tema</button>
                </div>
            </form>
        </section>

        <section style="margin-top:1rem;">
            <h2>Lista rápida</h2>
            <ul>
                <li>Elemento 1</li>
                <li>Elemento 2</li>
                <li>Elemento 3</li>
            </ul>
        </section>

        <section style="margin-top:1rem;">
            <h2>Tabla de ejemplo</h2>
            <table>
                <thead>
                    <tr><th>ID</th><th>Nombre</th><th>Estado</th></tr>
                </thead>
                <tbody id="tableBody">
                    <tr><td>1</td><td>Prueba A</td><td>Activo</td></tr>
                    <tr><td>2</td><td>Prueba B</td><td>Inactivo</td></tr>
                </tbody>
            </table>
        </section>
    </main>

    <footer>
        <p>Vista de prueba generada automáticamente. Ejecute acciones para ver interactividad.</p>
    </footer>

    <script>
        function showResult() {
            const nombre = document.getElementById('nombre').value || '(sin nombre)';
            const cat = document.getElementById('categoria').value;
            const tbody = document.getElementById('tableBody');

            // Añadir una fila de prueba a la tabla
            const id = tbody.children.length + 1;
            const tr = document.createElement('tr');
            tr.innerHTML = `<td>${id}</td><td>${escapeHtml(nombre)}</td><td>${escapeHtml(cat)}</td>`;
            tbody.appendChild(tr);

            alert('Formulario enviado: ' + nombre + ' (Categoría ' + cat + ')');
        }

        function resetForm() {
            document.getElementById('sampleForm').reset();
        }

        function toggleTheme() {
            document.body.style.background = document.body.style.background === 'rgb(34,34,34)' ? '#f7f7f7' : '#222';
            document.body.style.color = document.body.style.color === 'rgb(247,247,247)' ? '#222' : '#f7f7f7';
        }

        function escapeHtml(text) {
            return text.replace(/[&<>"']/g, function (m) {
                return {'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[m];
            });
        }
    </script>
</body>
</html>