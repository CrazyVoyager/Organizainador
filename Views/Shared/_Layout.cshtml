<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Organizainador</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-brand {
            font-weight: 600;
        }

        .card {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            margin-bottom: 1.5rem;
        }

        .card-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
            font-weight: 600;
        }

        .btn {
            border-radius: 0.35rem;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            color: #6e707e;
        }

        /* 1. Estilo Glassmorphism Gris */
        .sidebar.offcanvas {
            /* Fondo gris oscuro semi-transparente (ajusta el 0.85 para más/menos transparencia) */
            background: rgba(33, 37, 41, 0.85);
            /* Efecto de desenfoque (el "vidrio") */
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            /* Borde sutil en el lado derecho para dar volumen */
            border-right: 1px solid rgba(255, 255, 255, 0.1);
            /* Sombra suave */
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        }

        /* 2. Estilo para el header del menú */
        .sidebar .offcanvas-header {
            padding-top: 1.15rem;
            padding-bottom: 1.1rem;
            /* Hacemos la línea divisoria más sutil */
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        /* 3. Estilo para el botón hamburguesa */
        #sidebarToggle {
            cursor: pointer;
            color: #6c757d;
        }

            #sidebarToggle:hover {
                color: #2a2b2e;
            }

        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 0.75rem 1rem;
        }

            .sidebar .nav-link:hover {
                color: #fff;
                background-color: rgba(255, 255, 255, 0.1);
            }

            .sidebar .nav-link i {
                margin-right: 0.5rem;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- === NUEVO MENÚ DESLIZANTE (OFFCANVAS) === -->
            <div class="offcanvas offcanvas-start sidebar" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">

                <div class="offcanvas-header">
                    <h4 class="text-white" id="sidebarOffcanvasLabel"><i class="fas fa-calendar-alt"></i> Organizainador</h4>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>

                <div class="offcanvas-body p-0">
                    <!-- Aquí pongo los links de navegación que tenías -->
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/PaginaPrincipal">
                                <i class="fas fa-home"></i> Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Usuarios">
                                <i class="fas fa-users"></i> Usuarios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Clases">
                                <i class="fas fa-book"></i> Clases
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Actividades">
                                <i class="fa-solid fa-list-check"></i> Actividades
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Calendario">
                                <i class="fas fa-calendar-days"></i> Calendario
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Horarios">
                                <i class="fas fa-clock"></i> Horarios
                            </a>
                        </li>
                        <li class="nav-item mt-4 mb-2">
                            <span class="px-3 text-uppercase small fw-bold" style="color: rgba(255,255,255,0.6); font-size: 0.75rem;">
                                Módulo Clima (EJS)
                            </span>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="http://localhost:3000/" target="_blank">
                                <i class="fas fa-sun me-2 text-warning"></i> Clima Actual
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="http://localhost:3000/pronostico" target="_blank">
                                <i class="fas fa-calendar-week me-2 text-info"></i> Pronóstico 7 Días
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Organizainador/Logout">
                                <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- === CONTENIDO PRINCIPAL MODIFICADO === -->
            <main id="main-content" class="col-md-12 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

                    <div class="d-flex align-items-center">

                        <!-- Este botón ahora activa el offcanvas -->
                        <button id="sidebarToggle" class="btn btn-link me-2 p-0" type="button"
                                data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas"
                                aria-controls="sidebarOffcanvas">
                            <i class="fas fa-bars fs-4"></i>
                        </button>

                        <h1 class="h2">@ViewData["Title"]</h1>
                    </div>

                </div>
                <div style="position: fixed; bottom: 20px; right: 20px; z-index: 9999; display: flex; flex-direction: column; align-items: end; gap: 10px;">

                    <div id="weather-card" class="card shadow d-none" style="width: 200px; border-left: 4px solid #4e73df;">
                        <div class="card-body p-2">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <h6 class="m-0 fw-bold text-primary" style="font-size: 0.8rem;">Los Ángeles</h6>
                                    <span id="weather-temp" class="h4 fw-bold text-dark m-0">--°</span>
                                </div>
                                <div class="text-center">
                                    <i id="weather-icon" class="fas fa-cloud-sun fa-2x text-secondary"></i>
                                </div>
                            </div>
                            <small id="weather-desc" class="text-muted d-block mt-1" style="font-size: 0.75rem;">Cargando...</small>
                        </div>
                    </div>

                    <button id="weather-toggle" class="btn btn-primary rounded-circle shadow d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; transition: transform 0.2s;">
                        <i id="toggle-icon" class="fas fa-cloud-sun fs-4"></i>
                    </button>

                </div>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="./js/Clima.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>