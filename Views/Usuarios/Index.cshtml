@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Organizainador.Models.UsuarioModel>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-users me-2"></i>Usuarios</h1>
        <a asp-action="Crear" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Nuevo Usuario
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lista de Usuarios</h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usuario in Model)
                            {
                                <tr>
                                    <td>@usuario.Id</td>
                                    <td>@usuario.Nombre</td>
                                    <td>@usuario.Email</td>
                                    <td>
                                        <span class="badge bg-@(usuario.Est == "ACTIVO" ? "success" : "secondary")">
                                            @usuario.Est
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Modificar" asp-route-id="@usuario.Id"
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <a asp-action="Eliminar" asp-route-id="@usuario.Id"
                                               class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Eliminar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-users fa-3x text-gray-300 mb-3"></i>
                    <h5 class="text-gray-500">No hay usuarios registrados</h5>
                    <p class="text-gray-500">Comienza agregando un nuevo usuario.</p>
                    <a asp-action="Crear" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Crear Primer Usuario
                    </a>
                </div>
            }
        </div>
    </div>
</div>