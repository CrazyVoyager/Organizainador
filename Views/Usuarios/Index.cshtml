@* ORGANIZAINADOR/Views/Usuarios/Index.cshtml *@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Organizainador.Models.UsuarioModel>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid">
    <!-- Header con búsqueda -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1 class="h3 mb-1 text-gray-800">
                        <i class="fas fa-users me-2"></i>Usuarios
                    </h1>
                    <p class="text-muted mb-0 small">Gestiona los usuarios del sistema</p>
                </div>
                <a asp-action="Crear" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Nuevo Usuario
                </a>
            </div>
        </div>
    </div>

    <!-- Barra de búsqueda y filtros -->
    <div class="card shadow-sm mb-4">
        <div class="card-body py-3">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-8">
                    <label class="form-label small fw-bold mb-1">Buscar</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" 
                               name="busqueda" 
                               class="form-control" 
                               placeholder="Buscar por nombre, email o casa de estudios..."
                               value="@ViewData["BusquedaActual"]">
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0">
                                    <a asp-action="Index" asp-route-ordenar="nombre" class="text-decoration-none text-dark">
                                        Nombre <i class="fas fa-sort text-muted small"></i>
                                    </a>
                                </th>
                                <th class="border-0">
                                    <a asp-action="Index" asp-route-ordenar="email" class="text-decoration-none text-dark">
                                        Email <i class="fas fa-sort text-muted small"></i>
                                    </a>
                                </th>
                                <th class="border-0">Casa de Estudios</th>
                                <th class="border-0">Especialidad</th>
                                <th class="border-0">Rol</th>
                                <th class="border-0 text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usuario in Model)
                            {
                                <tr>
                                    <td>@usuario.Id</td>
                                    <td>@usuario.Nombre</td>
                                    <td>@usuario.Email</td>
                                    <td>@usuario.CEst</td>
                                    <td>@usuario.Est</td> 
                                    <td>@usuario.Rol</td> 
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Editar" asp-route-id="@usuario.Id"
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <a asp-action="Eliminar" asp-route-id="@usuario.Id"
                                               class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Eliminar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-users fa-3x text-gray-300 mb-3"></i>
                    <h5 class="text-gray-500">No hay usuarios registrados</h5>
                    <p class="text-gray-500">Comienza agregando un nuevo usuario.</p>
                    <a asp-action="Crear" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Crear Primer Usuario
                    </a>
                </div>
            }
        </div>
    </div>
</div>